<header class="top-header">
  <div class="logo">
    <%= link_to root_url, title: global_site_settings['Name'] do %>
      <%= image_tag 'layout/header/logo.png', alt: global_site_settings['Name'] %>
    <% end %>

    <p class="tagline">&ldquo;Working in partnership with you to build a better business&rdquo;</p>
  </div>

  <div class="contact-details">
    <strong class="advice-title">Need help or advice?</strong>

    <p class="advice-details">
      Call us on <strong><%= global_site_settings['Phone'] %> or</strong>
      Email <%= mail_to global_site_settings['Email'] %>
    </p>
  </div>
</header>

<nav class="primary-navigation">
  <div class="row">
    <div class="small-12 columns">
      <ul class="primary-navigation-links">
        <%= nested_menu_items(menu_items: @header_menu.menu_items) %>
      </ul>
    </div>
  </div>
</nav>
