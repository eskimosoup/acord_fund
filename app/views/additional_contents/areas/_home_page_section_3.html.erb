<%= content_for :head do %>
  <script>
  $(function() {
    $('.home-page-section-3 .columns').matchHeight({
      byRow: true
    });
  });
  </script>
<% end %>
<div class="home-page-section-3">
  <div class="row content-wrap collapse">
    <div class="medium-8 columns">
      <div class="content">
        <h2><%= two_tone_title additional_content_presenter.title %></h2>
        <%= additional_content_presenter.content %>
        <%= additional_content_presenter.button %>
      </div>
    </div>

    <div class="medium-4 columns">
      <div class="home-page-section-3-image-wrap">

        <div class="section-title">
          <%= link_to (image_tag 'components/icons/play-icon.png', alt: additional_content_presenter.title), additional_content_presenter.video_url %>
        </div>

        <div class="section-overlay">

        </div>

        <div class="section-image">
          <%= additional_content_presenter.home_page_section_3_image %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="small-12 text-center leaderboard columns">
      <%= @presented_leaderboard.leaderboard_link(@presented_leaderboard.show_image(alt: @presented_leaderboard.title)) %>
    </div>
  </div>
</div>
