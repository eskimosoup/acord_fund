<div class="internal-content">
  <%= render 'shared/title_area', title: @presented_article.title %>

  <div class="row">
    <div class="medium-8 <%= 'medium-centered' if @presented_article.show_image.blank? %> columns">
      <div class="content-box">
        <%= @presented_article.content %>

        <%= link_to 'View all', articles_path, class: 'inline-button', title: 'View all articles' %>
      </div>
    </div>

    <% if @presented_article.show_image.present? %>
      <div class="medium-4 columns">
        <% if @presented_article.show_image.present? %>
          <div class="aside-content-box">
            <%= @presented_article.show_image %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
